; Final test of string stdlib functions
include "../stdlib/strings.vasm"

section .data
    test1: str "Hello"
    test2: str "World"

section .text
main:
    func_begin i32
    local result: i32
    local idx: i32

    ; Test strlen
    call result, strlen, test1
    print result

    call result, strlen, test2
    print result

    ; Test strcmp
    call result, strcmp, test1, test2
    print result

    ; Test str_char_at - get character at index 1 from test1 "Hi" (should be 105 = 'i')
    set idx, 1
    call result, str_char_at, test1, idx
    print result

    ret 0
    func_end
